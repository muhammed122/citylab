<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:weightSum="6"
    android:orientation="vertical"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:weightSum="3"
       android:gravity="right"
       >
       <ImageView
           android:id="@+id/minmize_expanbal_list_result"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:src="@drawable/ic_baseline_minimize_24"
       android:layout_weight="0.3"
       android:layout_gravity="top"
       android:paddingRight="10dp"
           android:paddingBottom="20dp"
       android:layout_marginLeft="-25dp"
       />
       <TextView
           android:id="@+id/history_of_rsult_id_inside_result"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.5"
           android:fontFamily="@font/cairo_semibold"
           android:textStyle="bold"
           android:textSize="12sp"
           android:textColor="#2e3094"
           android:lineSpacingExtra="15sp"
           android:text="الموافق : 1/5/2020"
           android:gravity="center|left"
           android:paddingLeft="30sp"
           />

       <TextView
           android:id="@+id/day_item_inside_result"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="0.9"
           android:fontFamily="@font/cairo_semibold"
           android:textStyle="bold"
           android:textSize="12sp"
           android:textColor="#2e3094"
           android:lineSpacingExtra="15sp"
           android:text="يوم : الاثنين"
           android:paddingRight="30dp"
           android:gravity="center|right"
           />


   </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerview_image_inseid_result_id"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="4"
    ></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:background="#E2000163"
        android:weightSum="3"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_circle_down_24"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/ic_baseline_picture_as_pdf_24"
            android:gravity="center|left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/cairo_semibold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#FFFF"
            android:lineSpacingExtra="15sp"
            android:text="تحاليل صوره دم كامله"
            android:paddingRight="30dp"
            android:gravity="center|right"
            />


    </LinearLayout>

</LinearLayout>