<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="3.5"
    android:orientation="vertical"
    android:background="#f4f4f9">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
android:src="@drawable/sugerprewight"
    android:scaleType="center"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:fontFamily="@font/cairo_semibold"
    android:text="الوزن"
    android:layout_marginRight= "30sp"
                android:layout_marginTop="23dp"
    android:textColor="#2e3094"
    android:layout_gravity="right"
    />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:hint="وزنك"
                android:paddingRight="25dp"
                android:layout_marginLeft="10dp"
                android:textColor="#2e3094"
                android:textSize="18sp"
                android:fontFamily="@font/cairo_semibold"
                android:textColorHint="#2e3094"
                android:layout_marginTop="8dp"
                android:inputType="number"
                android:background="@drawable/signup_bordershape"
                />

        </LinearLayout>


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:weightSum="4"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="10dp"
        android:paddingRight="15dp"
        android:text="العمر"
        android:gravity="center|right|bottom"
        android:textColor="#2e3094"
       android:textSize="18sp"
        android:fontFamily="@font/cairo_semibold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:hint="عمرك"
        android:textSize="18sp"
        android:textColor="#2e3094"
        android:paddingRight="15dp"
        android:textColorHint="#2e3094"
        android:fontFamily="@font/cairo_semibold"
        android:background="@drawable/signup_bordershape"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="10dp"
        android:paddingRight="15dp"
        android:text="مستوي السكر"
        android:gravity="center|right|bottom"
        android:textColor="#2e3094"
        android:textSize="18sp"
        android:fontFamily="@font/cairo_semibold"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:hint="؟"
        android:textSize="18sp"
        android:textColor="#2e3094"
        android:paddingRight="15dp"
        android:textColorHint="#2e3094"
        android:fontFamily="@font/cairo_semibold"
        android:background="@drawable/signup_bordershape"
        />
</LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.5"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_marginTop="70dp"
    >
    <Button
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:text="أرسال"
        android:fontFamily="@font/cairo_semibold"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/borderhomebutton"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="right"
        android:textSize="18sp"
        android:textColor="#2e3094"
        android:text="تعليمات"
        android:fontFamily="@font/cairo_semibold"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="24sp"
        android:backgroundTint="#FFFF"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#2e3094"
            android:textSize="15sp"
            android:background="#FFF"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/cairo_semibold"
            />


    </androidx.cardview.widget.CardView>



</LinearLayout>
</LinearLayout>