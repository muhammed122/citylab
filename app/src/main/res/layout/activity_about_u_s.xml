<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f9"
    android:weightSum="5"
    android:orientation="vertical"

    tools:context=".activity.AboutUS">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:layout_weight=".4"
        android:backgroundTint="#2e3094"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:lineSpacingExtra="12sp"
                android:text="نبذه عنا"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backfrom_aboutus_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.884"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:src="@drawable/homeimage"
        android:layout_marginTop="25dp"
        android:paddingRight="@dimen/_25sdp"
        android:paddingLeft="@dimen/_25sdp"
        android:paddingTop="@dimen/_25sdp"
        android:paddingBottom="@dimen/_25sdp"
        />
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:layout_marginTop="@dimen/_25sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/mation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مهمتنا :"
            android:textSize="@dimen/_18sdp"
            android:textColor="#2f8b04"
            android:background="#2DEDEDED"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_13sdp"
            />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#2e3094"
    android:fontFamily="@font/cairo_semibold"
    android:paddingRight="@dimen/_10sdp"
    android:background="#2D989696"
    android:text="ان نكون من اهم واكبر المعامل التي تتمتع بدقة النتائج والاهتمام بعملائنا"

    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="قيمنا  :"
            android:textSize="@dimen/_18sdp"
            android:textColor="#2f8b04"
            android:background="#2DEDEDED"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_13sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
        android:text="• الالتزام الكامل من جانب قادة معمل المدينة وموظفيه برسالتنا وقيمنا.\n• الاستخدام الأمثل للتكنولوجيا الجديدة والمتطورة."
            />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="رسالتنا  :"
    android:textSize="@dimen/_18sdp"
    android:textColor="#2f8b04"
    android:background="#2DEDEDED"
    android:fontFamily="@font/cairo_semibold"
    android:paddingRight="@dimen/_13sdp"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="رسالتنا هي المساهمة في تحسين مستوى الصحة العامة والرفاهية للمجتمعات التي نقوم بخدمتها من خلال إمدادهم بالمعلومات التشخيصية المعملية عالية الجودة."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="ونسعى إلى تحقيق هذه الرسالة من خلال:"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="• الاجتهاد والسعي الجاد للوصول إلى دقة النتائج، الاستجابة لرغبات العملاء و سرعة تقديم الخدمة."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="• تقديم خدمات معملية عالية الجودة باستخدام أحدث وسائل التكنولوجيا."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="• التأكيد على معاني الاهتمام، المجاملة و الخبرة المهنية."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="• وضع احتياجات ورغبات المريض في مقدمة أولوياتنا."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="• اكتساب، تطبيق، ونشر المعرفة من خلال الاستخدام الأمثل للتكنولوجيا.
القيم"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="المريض هو محور الاهتمام احتياجات المرضى ورغباتهم هي المحرك الرئيسي لمعامل المدينة الطبية."
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="العلاقات :"
            android:textSize="@dimen/_13sdp"
            android:textColor="#2f8b04"
            android:background="#2DEDEDED"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_13sdp"
            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2e3094"
        android:fontFamily="@font/cairo_semibold"
        android:paddingRight="@dimen/_10sdp"
        android:background="#2D989696"
        android:text="معامل المدينة للتحاليل الطبية تطور وتعزز العلاقات مع جميع عملائها بما في ذلك المرضى، العائلات، الموظفين."
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الأداء المثالي :"
            android:textSize="@dimen/_13sdp"
            android:textColor="#2f8b04"
            android:background="#2DEDEDED"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_15sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="نسعي دائما للتقدم الي الامام والوصول الي قمه التكنولوجيا من خلال معاملنا لنرضي جميع المرضي وندقق ونهتم بهم وبالنتائج
التواصل"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e3094"
            android:fontFamily="@font/cairo_semibold"
            android:paddingRight="@dimen/_10sdp"
            android:background="#2D989696"
            android:text="تسعى معامل المدينة للتحاليل الطبية باهتمام إلى اكتساب وفهم المعلومات الهامة ذات الصلة بمجال عملها وخدماتها"
            />
    </LinearLayout>

</ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="0.4"
    android:gravity="center"
    android:weightSum="10"
    >
    <ImageView
        android:id="@+id/facbooklink"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/face"
    android:layout_marginRight="@dimen/_25sdp"
        />
    <ImageView
        android:id="@+id/whatapplink"
        android:layout_weight="1"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/what"
        android:layout_marginLeft="@dimen/_25sdp"
    />



</LinearLayout>


</LinearLayout>