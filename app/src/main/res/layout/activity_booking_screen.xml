<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f4f4f9"
android:orientation="vertical"
tools:context=".activity.BookingScreen"
android:weightSum="3.5">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_marginTop="-8dp"
    android:layout_weight=".28"
    android:backgroundTint="#2e3094"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:lineSpacingExtra="12sp"
            android:text="حجز تحاليل"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.884"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="5dp"
    android:layout_weight="0.98"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center|right|bottom"
            android:paddingRight="30dp"
            android:text="رقم الموبايل"
            android:textColor="#2e3094"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/phonnumbercllint_booking_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/signup_bordershape"
            android:hint="رقم الموبايل"
            android:paddingRight="15dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center|right|bottom"
            android:paddingRight="30dp"
            android:text="التاريخ"
            android:textColor="#2e3094"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/historyclint_booking_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/signup_bordershape"
            android:hint="التاريخ"
            android:paddingRight="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="6"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center|right|bottom"
            android:paddingRight="25dp"
            android:text="الاسم"
            android:textColor="#2e3094"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/nameclint_booking_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/signup_bordershape"
            android:hint="الاسم"
            android:paddingRight="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center|right|bottom"
            android:paddingRight="25dp"
            android:text="السن"
            android:textColor="#2e3094"
            android:textSize="15sp"

            />


        <EditText
            android:id="@+id/agecllint_booking_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/signup_bordershape"
            android:hint="السن"
            android:paddingRight="15dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center|right|bottom"
            android:paddingRight="25dp"
            android:text="اليوم"
            android:textColor="#2e3094"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dayclint_booking_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/signup_bordershape"
            android:hint="اليوم"
            android:paddingRight="15dp" />
    </LinearLayout>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.58"
    android:background="#e6e6e6"
    android:gravity="right|center"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/cairo_semibold"
        android:lineSpacingExtra="12sp"
        android:text="نوع الحجز"
        android:textColor="#2e3094"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center|top"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#2e3094"
        />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/radiogroup"
    android:layout_weight="2"
    android:gravity="right"
    >

    <RadioButton
        android:id="@+id/inlab_radio_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="حجز موعد بالمختبر"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/cairo_semibold"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2e3094"
        android:layout_marginTop="5dp"
        />
    <RadioButton
        android:id="@+id/inhome_test_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="حجز زياره منزليه"
        android:layoutDirection="rtl"
        android:paddingRight="10dp"
        android:textAlignment="textStart"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/cairo_semibold"
        android:textStyle="normal"
        android:textSize="11sp"
        android:textColor="#2e3094"
        android:layout_marginTop="5dp"
        />
</RadioGroup>


</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.7"
    android:orientation="vertical"
    android:weightSum="2"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center|right"
            android:lineSpacingExtra="15sp"
            android:paddingRight="25dp"
            android:textColor="#2e3094"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="العنوان" />

        <EditText
            android:id="@+id/addressclint_id_booking"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1.1"
            android:background="@drawable/signup_bordershape"
            android:textDirection="rtl"
            android:textSize="13sp" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#2e3094"
            android:lineSpacingExtra="15sp"
            tools:text="رقم المبنى"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.246" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#2e3094"
            android:lineSpacingExtra="15sp"
            tools:text="رقم الدور"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.246" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#2e3094"
            android:lineSpacingExtra="15sp"
            tools:text="رقم الشقه"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.246" />

        <EditText
            android:id="@+id/numberbuliding_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_bordershape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />

        <EditText
            android:id="@+id/number_door_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_bordershape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733"

            />

        <EditText
            android:id="@+id/number_flor_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_bordershape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.733" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.99"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/upload_image_booking_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_semibold"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="15sp"
            android:text="تحميل "
            android:layout_marginLeft="25dp"
            android:background="@drawable/shapbutton"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/signup_bordershape"
            android:textSize="15dp"
            android:text="تحميل صورة الروشته"
            android:gravity="center|right"
            android:fontFamily="@font/cairo_semibold"
            android:textColor="#2e3094"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/submet_id_booking"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:background="@drawable/shapbutton"
        android:text="أرسل"
        android:fontFamily="@font/cairo_semibold"
        />
</LinearLayout>


</LinearLayout>