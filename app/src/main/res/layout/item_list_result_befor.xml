<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#CACBE3"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"

        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <ImageView
                android:id="@+id/plus_expandbal_list_result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="-15dp"
                android:layout_weight="0.18"
                android:paddingRight="10dp"
                android:src="@drawable/ic_baseline_add_24" />

            <TextView
                android:id="@+id/history_of_rsult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center|right"
                android:textSize="13sp"
                android:text="التاريخ : "
                android:textColor="#2e3094" />

            <TextView
                android:id="@+id/name_of_singl_rsult_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center|right"
                android:paddingRight="15dp"
                android:text="تحليل صوره دم كامله"
                android:textColor="#2e3094"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/body_expand_result_id"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="right"
            android:weightSum="3">



            <TextView
                android:id="@+id/history_of_rsult_id_inside_result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center|left"
                android:lineSpacingExtra="15sp"
                android:paddingLeft="30sp"
                android:text="الموافق : 1/5/2020"
                android:textColor="#2e3094"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day_item_inside_result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center|right"
                android:lineSpacingExtra="15sp"
                android:paddingRight="30dp"
                android:text="يوم : الاثنين"
                android:textColor="#2e3094"
                android:textSize="10sp"
                android:textStyle="bold" />


        </LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="10dp"
    android:layout_weight="4.3">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_image_inseid_result_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textnnoimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نتائج التحاليل الخاصه بك تم تحميلها علي هيئه ملف PDF"
        android:textSize="15sp"
        android:textColor="#3E5DFA"
        android:visibility="gone"
        android:fontFamily="@font/cairo_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/linear_download_pdf"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#E2000163"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <ImageView
                android:id="@+id/downloadpdf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_baseline_arrow_circle_down_24" />

            <ImageView
                android:id="@+id/downloadpdfandopenit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_baseline_picture_as_pdf_24"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center|right"
                android:lineSpacingExtra="13sp"
                android:text="ملف تحميل التحليل"
                android:textColor="#FFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>