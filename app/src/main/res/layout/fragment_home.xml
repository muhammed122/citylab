<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".fragemnt.HomeFragment"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"


                >


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="center"
                    android:src="@drawable/headerhome"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.028"

                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:backgroundTint="#E0E1EA"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="2.5">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="4"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="0.9"
                                android:gravity="center"
                                android:text="معامل ستي لاب"
                                android:textColor="#2e3094"
                                android:textSize="18sp" />
                            <Button
                                android:id="@+id/resulthome_id"
                                android:layout_width="130dp"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="0.9"
                                android:background="@drawable/borderhomebutton"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="center"
                                android:text=" نتائج التحاليل"
                                android:textColor="#2e3094"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/booking_test_id"
                                android:layout_width="130dp"
                                android:layout_height="0dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="0.9"
                                android:background="@drawable/borderhomebutton"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="center"
                                android:text="حجز تحاليل"
                                android:textColor="#2e3094"
                                android:textSize="13sp"

                                />

                            <Button
                                android:id="@+id/aboutus_id"
                                android:layout_width="130dp"
                                android:layout_height="0dp"
                                android:layout_weight="0.9"
                                android:background="@drawable/borderhomebutton"
                                android:fontFamily="@font/cairo_semibold"
                                android:gravity="center"
                                android:text=" نبذه عنا"
                                android:textColor="#2e3094"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/homeimage" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:backgroundTint="#FFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2"
                    app:layout_constraintVertical_bias="0.109">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/light"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/textView"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.056" />
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center"
                            android:textColor="#2e3094"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.867"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.057"
                            android:text="نصايح " />
                        <Button
                            android:id="@+id/suger_id_home"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/borderwhite"
                            android:gravity="center"
                            android:textColor="#2e3094"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:text="قياس مستوى السكر"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.947"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.474" />
                        <Button
                            android:id="@+id/presserblode_id_home"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/borderwhite"
                            android:gravity="center"
                            android:text="قياس ضغط الدم"
                            android:textColor="#2e3094"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/perfect_wight_id_home"
                            app:layout_constraintHorizontal_bias="0.683"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.471" />

                        <Button
                            android:id="@+id/perfect_wight_id_home"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:background="@drawable/borderwhite"
                            android:gravity="center"
                            android:text="الوزن المثالى"
                            android:textColor="#2e3094"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/suger_id_home"
                            app:layout_constraintVertical_bias="0.636" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:weightSum="4"

                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mark"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.958"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#2e3094"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView3"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.487"
                            android:text="العروض" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_semibold"
                            android:gravity="center"
                            android:textColor="#2e3094"
                            android:textSize="13sp"
                            android:text="رؤيه  الكل"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/textView4"
                            app:layout_constraintHorizontal_bias="0.075"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:background="#F8F8FB"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:gravity="center"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1.4"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            android:layout_marginRight="2.5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="3"
                                >
                                <ImageView
                                    android:id="@+id/imag_home_offer_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight="1.7"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/offerimage"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.3"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="3"
                                        android:gravity="center">
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.8"
                                            android:gravity="center"
                                            android:text="600"
                                            android:textSize="12sp"
                                            android:textColor="#E40418"
                                            />
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.8"
                                            android:gravity="center"
                                            android:text="500"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="3dp"
                                            android:layout_weight="1.4"
                                            android:gravity="right|center"
                                            android:text="عنوان العرض"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2"
                                        android:layout_gravity="right|center">
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="right|center"
                                            android:text="ينتهى في :25/3"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="right|center"
                                            android:text="يبدأ من :15/3"
                                            android:layout_marginRight="3dp"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />
                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:layout_marginBottom="5dp"
                            android:layout_weight="1.4"
                            android:backgroundTint="#FFFFFF"
                            app:cardElevation="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white"
                            android:layout_marginLeft="2.5dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="3"

                                >

                                <ImageView
                                    android:id="@+id/imag_home_offer_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="3dp"
                                    android:scaleType="centerCrop"
                                    android:layout_weight="1.7"
                                    android:src="@drawable/offerimage" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.3"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="3"
                                        android:gravity="center">
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.8"
                                            android:gravity="center"
                                            android:text="600"
                                            android:textSize="12sp"
                                            android:textColor="#E40418"
                                            />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="0.8"
                                            android:gravity="center"
                                            android:text="500"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.4"
                                            android:gravity="right|center"
                                            android:text="عنوان العرض"
                                            android:layout_marginRight="3dp"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2"
                                        android:layout_gravity="right|center"

                                        >
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="right|center"
                                            android:text="ينتهى في :25/3"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="right|center"
                                            android:text="يبدأ من :15/3"
                                            android:layout_marginRight="3dp"
                                            android:textSize="12sp"
                                            android:textColor="#2e3094"
                                            />
                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#FFFF"
                    android:gravity="top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/advice" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </RelativeLayout>

</FrameLayout>