<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f4f4f9"
    android:orientation="vertical"
    tools:context=".activity.Wight_acticty"
    android:weightSum="4">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="-6dp"
        android:layout_weight=".28"
        android:backgroundTint="#2e3094"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_semibold"
                android:lineSpacingExtra="12sp"
                android:text="الوزن المثالي"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/backfrom_wight_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.884"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/perfictwight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30sp"
                android:fontFamily="@font/cairo_semibold"
                android:text="طولك"
                android:textColor="#2e3094"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/high_in_wight_leve"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_bordershape"
                android:fontFamily="@font/cairo_semibold"
                android:hint="الطول"
                android:paddingRight="@dimen/_5sdp"

                android:inputType="number"
                android:gravity="center"
                android:textColor="#2e3094"
                android:textColorHint="#2e3094"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/_5sdp"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center|right|bottom"
                android:paddingRight="15dp"
                android:text="العمر"
                android:textColor="#2e3094"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/age_in_wight_leve"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/signup_bordershape"
                android:fontFamily="@font/cairo_semibold"
                android:hint="عمرك"
                android:inputType="number"

                android:gravity="center"
                android:textColor="#2e3094"
                android:textColorHint="#2e3094"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center|right|bottom"
                android:paddingRight="15dp"
                android:text="الوزن"
                android:textColor="#2e3094"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/wight_in_wight_leve"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/signup_bordershape"
                android:fontFamily="@font/cairo_semibold"
                android:hint="؟"
                android:gravity="center"
                android:inputType="number"

                android:textColor="#2e3094"
                android:textColorHint="#2e3094"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:weightSum="5">

        <Button
            android:id="@+id/confer_wight"
            android:layout_width="190dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:background="@drawable/borderhomebutton"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:text="أرسال"
            android:textSize="13sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:fontFamily="@font/cairo_semibold"
            android:text="تعليمات"
            android:paddingRight="@dimen/_15sdp"
            android:textColor="#2e3094"
            android:textSize="13sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_wight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="3.7"
            android:backgroundTint="#FFFF"
            android:visibility="gone"
            app:cardCornerRadius="24sp">

            <TextView
                android:id="@+id/information_in_wight_leve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFF"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="#2e3094"
                android:gravity="right"

                android:textSize="15sp" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>